<div class="photos-wrapper" ng-controller="PhotosController as photos">
  <header>
    <div class="header-text">
      <h1>ColourMatch</h1>
      <p>Find beautiful photos from 500px, using colour.</p>
    </div>
  </header>

  <div class="content-wrapper grid padded-grid">
  <div class="or">OR</div>
    <div class="c6">
      <section class="photo-upload card">
        <h3>Upload a Photo</h3>

        <div class="upload_drag_box" 
          ng-file-drop ng-model="photo" 
          ng-file-change="fileDropped($files, $event, $rejectedFiles)" 
          accept="image/*"
          ng-rejected-file-model="rejected"
          allowDir="true"
          dropAvailable="dropSupported"
        >
          <i class="fa fa-cloud-upload"></i>
          <p>Drag Photo Here</p>
        </div>
        <div ng-no-file-drop>File Drag/drop is not supported</div> 

        <input id="authenticity_token" name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">  

      </section>
    </div>
    
    <div class="c6">
      <section class="colour-select card">
        <h3>Choose a Colour</h3>
        <p>blablabal</p>
      </section> 
    </div>
  </div>

</div>
